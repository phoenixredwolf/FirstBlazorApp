@using FirstBlazorApp.Data

<tr>
    <td>@GroceryItem.Quantity</td>
    <td>@GroceryItem.Name</td>
    <td>@GroceryItem.BasePrice.ToString("C")</td>
    <td>@GroceryItem.TotalPrice.ToString("C")</td>
    <td>
        <button class="btn-sm float-end" @onclick="AddPrice">
            + Add 100
        </button>
    </td>
</tr>

@code {
    [Parameter]
    public Grocery GroceryItem { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnGroceryPriceIncreased { get; set; }

    private async Task AddPrice()
    {
        GroceryItem.TotalPrice += GroceryItem.BasePrice * 100;
        await OnGroceryPriceIncreased.InvokeAsync();
    }
}
